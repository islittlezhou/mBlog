    <div class="row comlist">
        <div class="col-sm-4 leftBar">
            <ul class="clearfix">
                <li>
                    <strong><%= info[0] %></strong>
                    <span>关注</span>
                </li>
                <li>
                    <strong><%= info[1] %></strong>
                    <span>粉丝</span>
                </li>
                <li>
                    <strong><%= info[2] %></strong>
                    <span>微博</span>
                </li>
            </ul>
        </div>
        <div class="col-sm-8">
            <div class="ContentWrap">
                <div class="row">
                    <div class="col-sm-2">
                        <div class="manageSlidebar font-size-12">
                            <a class="b-r-3" href="javascript:void(0)">编辑个人信息</a>
                            <a href="/mu/manage/bindEmail">绑定邮箱</a>
                            <a href="/mu/manage/bindPhone">绑定手机</a>
                        </div>
                    </div>
                    <div class="col-sm-10">
                        <div class="formWrap">
                            <form action="/api/doUpdateUser" method="post">
                                <div class="form-group">
                                    <label for="realName">真实姓名</label>
                                    <input value="<%= result.realName %>" name="realName" type="text" class="form-control" id="realName" placeholder="真实姓名">
                                </div>
                                <div class="form-group">
                                    <label for="nickName">昵称</label>
                                    <input value="<%= result.nickName %>" name="nickName" type="text" class="form-control" id="nickName" placeholder="昵称">
                                </div>
                                <div class="form-group">
                                    <label for="bothDay">生日</label>
                                    <div class='input-group date' id='bothDay'>
                                        <input name="bothDay" value="<%= result.bothDay?result.bothDay.toLocaleString():null %>" placeholder="选择日期" type='text' class="form-control" />
                                        <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-calendar"></span>
                                        </span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="qq">qq</label>
                                    <input value="<%= result.qq %>" name="qq" type="text" class="form-control" id="qq" placeholder="qq">
                                </div>
                                <div class="form-group">
                                    <label for="phone">手机号</label>
                                    <input value="<%= result.phone %>" name="phone" type="text" class="form-control" id="phone" placeholder="手机号">
                                </div>
                                <div class="form-group">
                                    <label for="email">邮箱</label>
                                    <input value="<%= result.email %>" name="email" type="email" class="form-control" id="email" placeholder="邮箱">
                                </div>
                                <div class="form-group">
                                    <label for="Address">籍贯</label>
                                    <input value="<%= result.Address %>" name="Address" type="text" class="form-control" id="Address" placeholder="籍贯">
                                </div>
                                <div class="form-group">
                                    <label for="company">公司</label>
                                    <input value="<%= result.company %>" name="company" type="text" class="form-control" id="company" placeholder="公司">
                                </div>
                                <div class="form-group">
                                    <label for="blood">血型</label>
                                    <input value="<%= result.blood %>" name="blood" type="text" class="form-control" id="blood" placeholder="血型">
                                </div>
                                <div class="form-group">
                                    <label for="emotionStatus">感情状况</label>
                                    <input value="<%= result.emotionStatus %>" name="emotionStatus" type="text" class="form-control" id="emotionStatus" placeholder="感情状况">
                                </div>
                                <div class="form-group">
                                    <label for="sexHobby">性取向</label>
                                    <input value="<%= result.sexHobby %>" name="sexHobby" type="text" class="form-control" id="sexHobby" placeholder="性取向">
                                </div>
                                <div class="form-group">
                                    <label for="location">目前所在地</label>
                                    <input value="<%= result.location %>" name="location" type="text" class="form-control" id="location" placeholder="目前所在地">
                                </div>
                                <button type="submit" class="btn btn-primary">保存</button>
                            </form>
                            </div>
                    </div>
                </div>
            </div>
        </div>
